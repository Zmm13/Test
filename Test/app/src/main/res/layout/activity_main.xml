<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.example.administrator.test.utils.StaticBaseInfo" />

        <import type="android.graphics.Typeface" />

        <variable
            name="selectedPosition"
            type="Integer" />

        <variable
            name="duration"
            type="String" />

        <variable
            name="progressTime"
            type="String" />

        <variable
            name="showName"
            type="String" />
        <variable
            name="isLight"
            type="Boolean"/>
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@{isLight ? StaticBaseInfo.baseColor_light : StaticBaseInfo.baseColor_dark}"
            android:orientation="vertical"
            tools:context=".MainActivity">
            <LinearLayout
                android:id="@+id/ll_item"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv1"
                    style="@style/HomeTextViewStyle"
                    android:text="Local"
                    android:textColor="@{selectedPosition == 0 ? @color/app_base_color : @color/gray_text}" />

                <TextView
                    android:id="@+id/tv2"
                    style="@style/HomeTextViewStyle"
                    android:text="Second"
                    android:textColor="@{selectedPosition == 1 ? @color/app_base_color : @color/gray_text}" />

                <TextView
                    android:id="@+id/tv3"
                    style="@style/HomeTextViewStyle"
                    android:text="Third"
                    android:textColor="@{selectedPosition == 2 ? @color/app_base_color : @color/gray_text}" />

                <TextView
                    android:id="@+id/tv4"
                    style="@style/HomeTextViewStyle"
                    android:text="Setting"
                    android:textColor="@{selectedPosition == 3 ? @color/app_base_color : @color/gray_text}" />
            </LinearLayout>

            <Button
                android:id="@+id/bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Go"
                android:textAllCaps="false"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="@{isLight ? StaticBaseInfo.color_divider_dark : StaticBaseInfo.color_divider_light}" />

            <android.support.v4.view.ViewPager
                android:id="@+id/vp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"></android.support.v4.view.ViewPager>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="@{isLight ? StaticBaseInfo.color_divider_dark : StaticBaseInfo.color_divider_light}"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x45"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.example.administrator.test.MyView.CircleImageView
                    android:id="@+id/civ"
                    android:layout_width="@dimen/x39"
                    android:layout_height="@dimen/x39"
                    android:layout_marginLeft="@dimen/x10"
                    android:src="@drawable/girl_icon" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x3"
                    android:layout_marginRight="@dimen/x3"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x5"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:paddingLeft="@dimen/x10"
                        android:paddingRight="@dimen/x5"
                        android:singleLine="true"
                        android:text="@{showName}"
                        android:textColor="@{isLight ? StaticBaseInfo.baseColor_dark : StaticBaseInfo.baseColor_light}"
                        android:textSize="@dimen/x10" />

                    <SeekBar
                        android:id="@+id/seek_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:maxHeight="@dimen/x2"
                        android:minHeight="@dimen/x2"
                        android:paddingLeft="@dimen/x5"
                        android:paddingRight="@dimen/x5"
                        android:progressDrawable="@drawable/seekbar_bg"
                        android:splitTrack="false"
                        android:thumb="@drawable/seekbar_thumb_bg"
                        android:thumbOffset="@dimen/x5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/x5"
                        android:layout_marginLeft="@dimen/x10"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:text="@{progressTime}"
                        android:textColor="@{isLight ? StaticBaseInfo.baseColor_dark : StaticBaseInfo.baseColor_light}"
                        android:textSize="@dimen/x8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/x5"
                        android:layout_marginRight="@dimen/x10"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:text="@{duration}"
                        android:textColor="@{isLight ? StaticBaseInfo.baseColor_dark : StaticBaseInfo.baseColor_light}"
                        android:textSize="@dimen/x8" />
                </RelativeLayout>
                <!--android:textColor="@{isLight ? StaticBaseInfo.baseColor_dark : StaticBaseInfo.baseColor_light}"-->

                <ImageView
                    android:id="@+id/iv_play"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_marginRight="@dimen/x10"
                    android:scaleType="fitXY"
                    android:src="@drawable/selector_play_button" />
            </LinearLayout>

        </LinearLayout>
        <com.example.administrator.test.MyView.DragImageView
            android:id="@+id/div"
            android:layout_width="@dimen/x35"
            android:layout_height="@dimen/x35"
            android:src="@{isLight ? @drawable/lightbulb_dark : @drawable/lightbulb_light}"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x12"
            android:layout_marginBottom="@dimen/x60"
            app:side_padding="@dimen/x12"
            />
    </RelativeLayout>
</layout>