        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginRight="@dimen/x5"-->
        <!--android:layout_toLeftOf="@+id/iv_menu"-->
        <!--android:src="@drawable/music_icon" />-->
    </RelativeLayout>
</layout>
