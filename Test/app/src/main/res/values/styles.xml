<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--去除系统标题栏-->
    <style name="NoTitleTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
    </style>
    <!--主页选项样式-->
    <style name="HomeTextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/x32</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#cacaca</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="HomeTextViewStyle_selected">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/x10</item>
        <item name="android:textColor">#141414</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="activityAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/animaition_activity_start</item>
        <item name="android:activityCloseExitAnimation">@anim/animaition_activity_end</item>
        <item name="android:activityOpenExitAnimation">@anim/animaition_activity_main_end</item>
        <item name="android:activityCloseEnterAnimation">@anim/animaition_activity_main_start</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
    </style>
    <style name="activityAnimationMain">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
    </style>
    <style name="ActivityTheme" parent="NoTitleTheme">
      <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>
    <style name="ActivityThemeMain" parent="NoTitleTheme">
       <item name="android:windowAnimationStyle">@style/activityAnimationMain</item>
    </style>
</resources>
