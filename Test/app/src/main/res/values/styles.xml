<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--去除系统标题栏-->
    <style name="NoTitleTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
    </style>
    <!--主页选项样式-->
    <style name="HomeTextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/x32</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#cacaca</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="HomeTextViewStyle_selected">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/x10</item>
        <item name="android:textColor">#141414</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
